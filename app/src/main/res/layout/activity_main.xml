<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colordark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintCircleRadius="20dp"
        android:background="@drawable/bg"
        app:popupTheme="@style/ThemeOverlay.AppCompat"
        tools:ignore="MissingConstraints">

        <ImageView
            android:src="@drawable/bannercovidpart3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp" />



        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="true"
            android:padding="14dp"
            android:paddingBottom="0dp"
            android:rowCount="2"
            android:foregroundGravity="center_vertical"
            tools:ignore="MissingConstraints">

            <!--Colom 1-->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnjateng"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_columnWeight="0.5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:backgroundTint="@color/colorcarddark"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/linearatas1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/terkonfirmsi"
                        android:layout_gravity="center_horizontal"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:paddingTop="35dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvTerkonfirmasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- - - -"
                        android:textAlignment="center"
                        android:textColor="@color/colorOrange"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Terkorfirmasi"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="11sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Column 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnjogja"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_columnWeight="0.5"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:backgroundTint="@color/colorcarddark"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/negatif"
                        android:layout_gravity="center_horizontal"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:paddingTop="35dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvNegatif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- - - -"
                        android:textAlignment="center"
                        android:textColor="@color/colorYellow"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Negatif"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="11sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <!--Colom 3-->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnjabar"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_columnWeight="0.5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:backgroundTint="@color/colorcarddark"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/linearatas3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/sembuh"
                        android:layout_gravity="center_horizontal"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:paddingTop="35dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvSembuh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- - - -"
                        android:textAlignment="center"
                        android:textColor="@color/colorGreen"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sembuh"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="11sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <!-- Column 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnjatim"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_columnWeight="0.5"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:backgroundTint="@color/colorcarddark"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/close"
                        android:layout_gravity="center_horizontal"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:paddingTop="35dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvGugur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- - - -"
                        android:textAlignment="center"
                        android:textColor="@color/colorRed"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Meninggal"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="11sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </GridLayout>

        <TextView
            android:id="@+id/lastUpdate"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:fontFamily="@font/sairasemibold"
            android:text="Last Update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnCall"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text="EMERGENCY CALL"
            android:textStyle="bold"
            android:textColor="#fff"
            android:fontFamily="@font/sairasemibold"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button"
            ></Button>

        <TextView

            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Layanan darurat Kemenkes RI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>

    <TextView
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:gravity="center|bottom"
        android:text="Siaga Corona V1.0"
        android:textSize="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>